<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.steven.movieapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MovieApp"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name=".ui.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MovieInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.PlayVideoActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.FullScreen" />
        <activity
            android:name=".ui.CommentsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.SearchMovieActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.PhotosActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.ActorInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.PreviewPhotosActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.PreviewPhotoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.AboutAppActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>